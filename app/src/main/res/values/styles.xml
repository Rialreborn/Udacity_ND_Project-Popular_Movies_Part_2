<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" android:windowActionBar="false">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
    </style>

    <!-- Menu -->
    <!-- Menu Active Text -->
    <style name="menuActiveText" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Movie Detail Text Themes-->
    <!-- Movie Detail Titles -->
    <style name="movieDetailSubHeaderText" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>

    </style>

    <!-- Movie Detail Body -->
    <style name="movieDetailBodyText" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <!-- Movie Detail Author-->
    <style name="movieDetailPlotText" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>


</resources>
